<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/oneHundred"
    android:id="@+id/const_list"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="@dimen/oneHundred"
        android:layout_height="match_parent"
        android:id="@+id/iv_icon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_store"
        android:text="가게이름"
        android:textSize="@dimen/fifteen"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/five"
        android:layout_marginLeft="@dimen/ten"
        app:layout_constraintLeft_toRightOf="@id/iv_icon"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_item"
        android:text="품목이름"
        android:textSize="@dimen/fifteen"
        android:textColor="@color/black"
        android:layout_marginLeft="@dimen/ten"
        app:layout_constraintLeft_toRightOf="@id/iv_icon"
        app:layout_constraintTop_toBottomOf="@id/tv_store"
        app:layout_constraintBottom_toTopOf="@id/tv_price"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_price"
        android:text="가격"
        android:textSize="@dimen/fifteen"
        android:textColor="@color/black"
        android:layout_marginBottom="@dimen/five"
        android:layout_marginLeft="@dimen/ten"
        app:layout_constraintLeft_toRightOf="@id/iv_icon"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/iv_star_5"
        android:src="@drawable/star"
        android:visibility="invisible"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/five"
        android:layout_marginRight="@dimen/ten"/>

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/iv_star_4"
        android:src="@drawable/star"
        android:visibility="invisible"
        app:layout_constraintRight_toLeftOf="@id/iv_star_5"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/five"
        />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/iv_star_3"
        android:src="@drawable/star"
        android:visibility="invisible"
        app:layout_constraintRight_toLeftOf="@id/iv_star_4"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/five"
        />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/iv_star_2"
        android:src="@drawable/star"
        android:visibility="invisible"
        app:layout_constraintRight_toLeftOf="@id/iv_star_3"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/five"
        />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/iv_star_1"
        android:src="@drawable/star"
        android:visibility="invisible"
        app:layout_constraintRight_toLeftOf="@id/iv_star_2"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/five"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_light"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
