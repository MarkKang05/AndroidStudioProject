<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:id="@+id/iv_icon"
        android:src="@drawable/plus"
        android:padding="@dimen/twentyFive"
        android:background="@drawable/border_black_square"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/fifty"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_name"
        android:text="가게이름 : "
        android:textSize="@dimen/fifteen"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/iv_icon"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/forty"
        android:layout_marginLeft="@dimen/thirty"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_item"
        android:text="품목 : "
        android:textSize="@dimen/fifteen"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/tv_name"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/ten"
        android:layout_marginLeft="@dimen/thirty"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_price"
        android:text="가격 : "
        android:textSize="@dimen/fifteen"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/tv_item"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/ten"
        android:layout_marginLeft="@dimen/thirty"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_star"
        android:text="별점 : "
        android:textSize="@dimen/fifteen"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/tv_price"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/ten"
        android:layout_marginLeft="@dimen/thirty"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_location"
        android:text="위치 : "
        android:textSize="@dimen/fifteen"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/tv_star"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/ten"
        android:layout_marginLeft="@dimen/thirty"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_point"
        android:text="점"
        android:textColor="@color/black"
        android:textSize="@dimen/fifteen"
        android:layout_marginLeft="@dimen/five"
        app:layout_constraintLeft_toRightOf="@id/et_star"
        app:layout_constraintBottom_toBottomOf="@id/tv_star"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_quick"
        android:text="퀵 여부 : "
        android:textSize="@dimen/fifteen"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/tv_location"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/ten"
        android:layout_marginLeft="@dimen/thirty"
        />

    <TextView
        android:layout_width="80dp"
        android:layout_height="0dp"
        android:id="@+id/tv_possible"
        android:text="가능"
        android:textSize="@dimen/fifteen"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_marginLeft="@dimen/ten"
        android:background="@drawable/border_black_square"
        app:layout_constraintLeft_toRightOf="@id/tv_quick"
        app:layout_constraintTop_toTopOf="@id/tv_quick"
        app:layout_constraintBottom_toBottomOf="@id/tv_quick"/>


    <TextView
        android:layout_width="80dp"
        android:layout_height="0dp"
        android:id="@+id/tv_impossible"
        android:text="불가능"
        android:textSize="@dimen/fifteen"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_marginLeft="@dimen/ten"
        android:background="@drawable/border_black_square"
        app:layout_constraintLeft_toRightOf="@id/tv_possible"
        app:layout_constraintTop_toTopOf="@id/tv_quick"
        app:layout_constraintBottom_toBottomOf="@id/tv_quick"/>

       <EditText
           android:layout_width="200dp"
           android:layout_height="wrap_content"
           android:id="@+id/et_name"
           android:layout_marginLeft="@dimen/ten"
           app:layout_constraintBottom_toBottomOf="@id/tv_name"
           app:layout_constraintLeft_toRightOf="@id/tv_name"
           />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/et_item"
        android:layout_marginLeft="@dimen/ten"
        app:layout_constraintBottom_toBottomOf="@id/tv_item"
        app:layout_constraintLeft_toRightOf="@id/tv_item"
        />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/et_price"
        android:layout_marginLeft="@dimen/ten"
        app:layout_constraintBottom_toBottomOf="@id/tv_price"
        app:layout_constraintLeft_toRightOf="@id/tv_price"
        />

    <EditText
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/et_star"
        android:layout_marginLeft="@dimen/ten"
        app:layout_constraintBottom_toBottomOf="@id/tv_star"
        app:layout_constraintLeft_toRightOf="@id/tv_star"
        />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/et_location"
        android:layout_marginLeft="@dimen/ten"
        app:layout_constraintBottom_toBottomOf="@id/tv_location"
        app:layout_constraintLeft_toRightOf="@id/tv_location"
        />



        <Button
    android:layout_width="130dp"
    android:layout_height="wrap_content"
    android:id="@+id/btn_cancel"
    android:text="취소"
    android:textSize="@dimen/twenty"
    android:textColor="@color/black"
            android:background="@drawable/border_black_10"
            app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintHorizontal_bias="0.15"
    android:layout_marginBottom="@dimen/twenty"/>

    <Button
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn_complete"
        android:text="완료"
        android:textSize="@dimen/twenty"
        android:textColor="@color/black"
        android:background="@drawable/border_black_10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.85"
        android:layout_marginBottom="@dimen/twenty"/>



</androidx.constraintlayout.widget.ConstraintLayout>