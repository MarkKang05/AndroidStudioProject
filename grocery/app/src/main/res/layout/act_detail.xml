<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <ImageView
        android:layout_width="200dp"
        android:layout_height="180dp"
        android:id="@+id/iv_icon"
        android:src="@drawable/plus"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/fifty"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_name"
        android:text="가게이름 : "
        android:textSize="@dimen/fifteen"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/iv_icon"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/forty"
        android:layout_marginLeft="@dimen/forty"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_item"
        android:text="품목 : "
        android:textSize="@dimen/fifteen"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/tv_name"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/ten"
        android:layout_marginLeft="@dimen/forty"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_price"
        android:text="가격 : "
        android:textSize="@dimen/fifteen"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/tv_item"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/ten"
        android:layout_marginLeft="@dimen/forty"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_star"
        android:text="별점 : "
        android:textSize="@dimen/fifteen"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/tv_price"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/ten"
        android:layout_marginLeft="@dimen/forty"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_location"
        android:text="위치 : "
        android:textSize="@dimen/fifteen"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/tv_star"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/ten"
        android:layout_marginLeft="@dimen/forty"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_quick"
        android:text="퀵 여부 : "
        android:textSize="@dimen/fifteen"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tv_location"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/ten"
        android:layout_marginLeft="@dimen/forty"
        />

    <TextView
        android:layout_width="60dp"
        android:layout_height="0dp"
        android:id="@+id/tv_quick1"
        android:text="가능"
        android:gravity="center"
        android:layout_marginLeft="@dimen/ten"
        android:textSize="@dimen/fifteen"
        android:textColor="@color/black"
        app:layout_constraintLeft_toRightOf="@id/tv_quick"
        app:layout_constraintTop_toTopOf="@id/tv_quick"
        app:layout_constraintBottom_toBottomOf="@id/tv_quick"/>


    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/tv_name1"
        android:textSize="@dimen/fifteen"
        android:textColor="@color/black"
        android:layout_marginLeft="@dimen/ten"
        app:layout_constraintBottom_toBottomOf="@id/tv_name"
        app:layout_constraintLeft_toRightOf="@id/tv_name"
        />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/tv_item1"
        android:textSize="@dimen/fifteen"
        android:textColor="@color/black"
        android:layout_marginLeft="@dimen/ten"
        app:layout_constraintBottom_toBottomOf="@id/tv_item"
        app:layout_constraintLeft_toRightOf="@id/tv_item"
        />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/tv_price1"
        android:textSize="@dimen/fifteen"
        android:textColor="@color/black"
        android:layout_marginLeft="@dimen/ten"
        app:layout_constraintBottom_toBottomOf="@id/tv_price"
        app:layout_constraintLeft_toRightOf="@id/tv_price"
        />


    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/tv_location1"
        android:layout_marginLeft="@dimen/ten"
        android:textSize="@dimen/fifteen"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@id/tv_location"
        app:layout_constraintLeft_toRightOf="@id/tv_location"
        />


    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/iv_star_5"
        android:src="@drawable/star"
        android:visibility="invisible"
        app:layout_constraintLeft_toRightOf="@id/iv_star_4"
        app:layout_constraintBottom_toBottomOf="@id/tv_star"
        android:layout_marginBottom="@dimen/five"
        />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/iv_star_4"
        android:src="@drawable/star"
        android:visibility="invisible"
        app:layout_constraintLeft_toRightOf="@id/iv_star_3"
        app:layout_constraintBottom_toBottomOf="@id/tv_star"
        android:layout_marginBottom="@dimen/five"
        />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/iv_star_3"
        android:src="@drawable/star"
        android:visibility="invisible"
        app:layout_constraintLeft_toRightOf="@id/iv_star_2"
        app:layout_constraintBottom_toBottomOf="@id/tv_star"
        android:layout_marginBottom="@dimen/five"
        />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/iv_star_2"
        android:src="@drawable/star"
        android:visibility="invisible"
        app:layout_constraintLeft_toRightOf="@id/iv_star_1"
        app:layout_constraintBottom_toBottomOf="@id/tv_star"
        android:layout_marginBottom="@dimen/five"
        />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/iv_star_1"
        android:src="@drawable/star"
        android:visibility="invisible"
        app:layout_constraintLeft_toRightOf="@id/tv_star"
        app:layout_constraintBottom_toBottomOf="@id/tv_star"
        android:layout_marginBottom="@dimen/five"
        android:layout_marginLeft="@dimen/ten"
        />


    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn_complete"
        android:text="완료"
        android:textSize="@dimen/twenty"
        android:textColor="@color/black"
        android:background="@drawable/border_black_10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="@dimen/twenty"/>

</androidx.constraintlayout.widget.ConstraintLayout>